<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseLocationActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_background"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_image"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Tên:"
                android:textSize="16sp"
                android:textColor="@color/labeTextColor"/>
            <EditText
                android:id="@+id/tf_deliver_point_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:text=""
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Địa chỉ:"
                android:textSize="16sp"
                android:textColor="@color/labeTextColor"/>
            <EditText
                android:id="@+id/tf_deliver_point_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:text=""
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Số điện thoại:"
                android:textSize="16sp"
                android:textColor="@color/labeTextColor"/>
            <EditText
                android:id="@+id/tf_phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:text="+84"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Ngày bắt đầu:"
                        android:textSize="16sp"
                        android:textColor="@color/labeTextColor"/>
                    <TextView
                        android:id="@+id/tf_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:textSize="17sp"
                        android:gravity="left|center"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Ngày kết thúc:"
                        android:textSize="16sp"
                        android:textColor="@color/labeTextColor"/>
                    <TextView
                        android:id="@+id/tf_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:textSize="17sp"
                        android:gravity="left|center"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Giờ mở cửa"
                        android:textSize="16sp"
                        android:textColor="@color/labeTextColor"/>
                    <TextView
                        android:id="@+id/tf_open_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:textSize="17sp"
                        android:gravity="left|center"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Giờ đóng cửa:"
                        android:textSize="16sp"
                        android:textColor="@color/labeTextColor"/>
                    <TextView
                        android:id="@+id/tf_close_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:textSize="17sp"
                        android:gravity="left|center"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:text="Chọn hình:"
                    android:textSize="16sp"
                    android:textColor="@color/labeTextColor"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onTakePhotoButtonClicked"
                    android:src="@drawable/take_photo_icon"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/location_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@drawable/giving_to_charity_blog_size"
                android:scaleType="fitXY"
                android:visibility="visible"
                />
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_number_to_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="Thêm điểm mới"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:text="Thêm"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_gravity="right|center"
            android:textAllCaps="false"
            android:onClick="onSaveButtonClicked"
            />
    </FrameLayout>


</FrameLayout>